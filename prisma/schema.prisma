generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  firstName     String?
  lastName      String?
  age           Int?
  username      String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user")
  address       String?   @unique

  // Status fields
  status       String @default("active") // "active", "suspended"
  walletStatus String @default("active") // "active", "flagged", "blacklisted"

  // Subscription Info
  planType           String? // "basic", "pro", "whale"
  billingCycle       String? // "monthly", "yearly"
  subscriptionStatus String? // "active", "failed", "canceled"
  lastPayment        DateTime?
  nextPayment        DateTime?

  firstSeen DateTime @default(now())
  isAutoPay Boolean  @default(false)

  accounts       Account[]
  sessions       Session[]
  transactions   Transaction[]
  tokens         Token[]
  liquidityPools LiquidityPool[]
  wallets        Wallet[]
  subscriptions  Subscription[]
  posts          BlogPost[]
}

model Wallet {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  address          String   @unique
  label            String?  // e.g. "Phantom"
  
  status           String   @default("active") // active, disconnected, flagged, banned
  wsolEnabled      Boolean  @default(false)
  solBalance       Float    @default(0)
  
  isPrimary        Boolean  @default(false)
  isAutoSubscribed Boolean  @default(true)
  
  lastSeenAt       DateTime @default(now())
  connectedAt      DateTime @default(now())
  updatedAt        DateTime @updatedAt @default(now())

  @@index([userId])
}

model Token {
  id          String  @id @default(cuid())
  name        String
  symbol      String
  description String?
  uri         String?
  image       String?
  address     String  @unique

  // Socials
  website  String?
  twitter  String?
  telegram String?
  discord  String?

  creatorId String
  creator   User   @relation(fields: [creatorId], references: [id])

  // Cloning
  clonedFrom String? // Address of the original token if cloned



  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  liquidityPools LiquidityPool[]
}

model LiquidityPool {
  id      String @id @default(cuid())
  tokenId String
  token   Token  @relation(fields: [tokenId], references: [id])

  quoteToken  String @default("SOL")
  baseAmount  Float
  quoteAmount Float

  startTime DateTime @default(now())

  // On-chain info
  marketId  String?
  lpAddress String?
  signature String? // Creation tx

  status String @default("pending") // pending, active, failed

  creatorId String
  creator   User   @relation(fields: [creatorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdminLog {
  id        String   @id @default(cuid())
  adminId   String
  action    String
  targetId  String?
  details   String?
  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Transaction {
  id          String   @id @default(uuid())
  signature   String   @unique
  amount      Float
  date        DateTime @default(now())
  userId      String?
  userAddress String? // Added for when user is not logged in but we have address
  type        String   @default("token_creation") // token_creation, liquidity_pool, subscription, copy_coin
  status      String   @default("success") // "success", "failed", "pending"
  user        User?    @relation(fields: [userId], references: [id])
}

model Subscription {
  id            String    @id @default(cuid()) // subscription_id
  userId        String
  walletAddress String
  planType      String    // plan_type: "basic", "pro", "whale"
  status        String    // status: "active", "failed", "cancelled"
  lastPayment   DateTime?
  nextPayment   DateTime?
  failureReason String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([walletAddress])
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String   // DB Text handled by Prisma automatically
  coverImage  String?
  
  // Meta
  seoTitle       String?
  seoDescription String?
  
  published   Boolean  @default(false)
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  categories  BlogCategory[]
  tags        BlogTag[]
  
  viewCount   Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?
}

model BlogCategory {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  posts       BlogPost[]
}

model BlogTag {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  posts       BlogPost[]
}
